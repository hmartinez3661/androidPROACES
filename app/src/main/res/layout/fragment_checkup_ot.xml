<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".ui.RevAutorizOTs.FragmentCheckupOT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:background="@drawable/style_titulos"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp">

        <TextView
            android:id="@+id/tvNumRut"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="@string/tvNumOT"
            android:textColor="@color/black"
            android:layout_marginTop="8dp"
            android:textStyle="bold"
            android:textSize="16sp" />

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#575659"/>

        <TextView
            android:id="@+id/tvIndicacionesX"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="@string/tituloVent01"
            android:layout_marginStart="10dp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/dividerX"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#9E9CA2"
        android:layout_marginTop="1dp"
        android:layout_marginBottom="2dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="5dp"
                    android:layout_weight="0.20"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:text="@string/etMaquina"
                    android:textSize="16sp"/>

                <EditText
                    android:id="@+id/etNombreEquip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:layout_marginEnd="5dp"
                    android:enabled="false"
                    android:inputType="none"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/etTrabajoRut"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/style_bordes_edittex1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.003"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <TextView
                android:id="@+id/tvEjector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/ejectSelected"
                android:layout_marginStart="16dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/etTrabajoRut"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvFrecuenc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:text="@string/prioridSelect"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintTop_toBottomOf="@+id/tvEjector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.035"/>

            <Spinner
                android:id="@+id/tvEjecutoRutDt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/etTrabajoRut"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.015"/>

            <Spinner
                android:id="@+id/tvFrecucRutDt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/tvEjecutoRutDt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintVertical_bias="0.015"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFrecucRutDt"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvIndicFotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fotosAnexada"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2389DA"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.01"
                app:layout_constraintHorizontal_bias="0.0"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIndicFotos"
                app:layout_constraintVertical_bias="0.01"/>

            <TextView
                android:id="@+id/tvIndicaciones2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvIndicacion2"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="30dp"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.01" />

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.63" />

            <TextView
                android:id="@+id/tvClasificOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvClasificOT"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/tvIndicaciones2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.03"/>

            <Spinner
                android:id="@+id/spnClasificOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/tvIndicaciones2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvStatusOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvStatuscOT"
                android:layout_marginStart="16dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/tvClasificOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.045"/>

            <Spinner
                android:id="@+id/spnStatusOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/spnClasificOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvNumPersEstim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvNumPersEstim"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/spnStatusOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.025"/>

            <EditText
                android:id="@+id/etNumPersEstim"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="@drawable/style_bordes_edittex3"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:selectAllOnFocus="true"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/spnStatusOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvNumHrsEstim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvNumHrsEstim"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textAlignment="textEnd"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/tvNumPersEstim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <EditText
                android:id="@+id/etNumHrsEstim"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:background="@drawable/style_bordes_edittex3"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:selectAllOnFocus="true"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/etNumPersEstim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNumHrsEstim"
                app:layout_constraintVertical_bias="0.03"/>

            <TextView
                android:id="@+id/tvMedidasSegur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvIndicPrev"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <EditText
                android:id="@+id/etMedidadSegur"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:gravity="top"
                android:hint="@string/etIndicPrevHint"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_bordes_edittex1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMedidasSegur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvExplicRechaso"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/explicRechaso"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/etMedidadSegur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.03"/>

            <EditText
                android:id="@+id/etExplicRechazo"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:gravity="top"
                android:hint="@string/explicRechaso"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_bordes_edittex1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvExplicRechaso"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etExplicRechazo"
                app:layout_constraintVertical_bias="0.1"/>

            <Button
                android:id="@+id/btnSaveRevisOT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="30dp"
                android:text="@string/btnSavaChanges"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4"
                app:layout_constraintBottom_toBottomOf="parent" />

            <TextView
                android:id="@+id/tvIdRepteEjec"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvIndicFotos"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"/>

            <ProgressBar
                android:id="@+id/progresBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>




