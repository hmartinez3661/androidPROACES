<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ReportEjecOTs.FragmentReportEjecTabs">

    <!-- -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayoutId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabGravity="fill"
        app:tabIndicatorAnimationMode="elastic"
        app:tabIndicator="@drawable/tabs_shape"
        app:tabIndicatorGravity="stretch"
        app:tabMode="fixed"
        app:tabBackground="@drawable/tabs_color_background"
        app:tabSelectedTextColor="@color/white">

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabOrdenTrab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tabOrdTrab" />

        <com.google.android.material.tabs.TabItem
            android:id="@+id/tabReporte"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tabRepteEjec" />

    </com.google.android.material.tabs.TabLayout>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPagerId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabLayoutId"/>

</RelativeLayout>