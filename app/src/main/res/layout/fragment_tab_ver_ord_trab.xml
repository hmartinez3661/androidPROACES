<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    android:orientation="vertical"
    tools:context=".ui.ReportEjecOTs.FragmentTabVerOrdTrab">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/linearLayout0"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/style_titulos"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/dividerX">

                <TextView
                    android:id="@+id/tvNumRut"
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="@string/tvNumOT"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <View
                    android:layout_width="2dp"
                    android:layout_height="match_parent"
                    android:background="#515053"/>

                <TextView
                    android:id="@+id/tvIndicacionesX"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="@string/encabesadoVent11"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="15dp"
                    android:layout_gravity="center"
                    android:textAlignment="center"
                    android:textSize="15sp" />

            </LinearLayout>

            <View
                android:id="@+id/dividerX"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginTop="1dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout0"
                app:layout_constraintBottom_toTopOf="@+id/linearLayout"/>

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/dividerX" >

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.20"
                    android:textColor="@color/black"
                    android:text="@string/etMaquina"
                    android:textStyle="bold"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/etNombreEquip"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.80"
                    android:layout_marginEnd="5dp"
                    android:enabled="false"
                    android:textColor="@color/black"
                    android:inputType="none"
                    android:textSize="15sp" />

            </LinearLayout>

            <EditText
                android:id="@+id/etTrabajoRut"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_bordes_edittex1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/linearLayout"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.003"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.4" />

            <TextView
                android:id="@+id/tvEjector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="@string/ejectSelected"
                android:layout_marginStart="16dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/etTrabajoRut"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.04"/>

            <TextView
                android:id="@+id/tvFrecuenc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:text="@string/prioridSelect"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/tvEjector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/guideline1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.04"/>

            <Spinner
                android:id="@+id/tvEjecutoRutDt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/etTrabajoRut"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.03"/>

            <Spinner
                android:id="@+id/tvFrecucRutDt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/tvEjecutoRutDt"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintVertical_bias="0.02"/>

            <View
                android:id="@+id/divider2"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvFrecucRutDt"
                app:layout_constraintVertical_bias="0.03"/>

            <TextView
                android:id="@+id/tvIndicFotos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fotosAnexada"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#2389DA"
                android:textAlignment="center"
                app:layout_constraintTop_toBottomOf="@+id/divider2"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintVertical_bias="0.02"
                app:layout_constraintHorizontal_bias="0.0"/>

            <View
                android:id="@+id/divider3"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvIndicFotos"
                app:layout_constraintVertical_bias="0.02"/>

            <androidx.constraintlayout.widget.Guideline
                android:id="@+id/guideline2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintGuide_percent="0.63" />

            <TextView
                android:id="@+id/tvClasificOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvClasificOT"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"/>

            <Spinner
                android:id="@+id/spnClasificOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/divider3"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintVertical_bias="0.03"/>

            <TextView
                android:id="@+id/tvStatusOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/estatusAct"
                android:textStyle="bold"
                android:layout_marginTop="7dp"
                android:layout_marginStart="16dp"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/tvClasificOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.03"/>

            <Spinner
                android:id="@+id/spnStatusOT"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_spinners"
                app:layout_constraintTop_toBottomOf="@+id/spnClasificOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/guideline1"
                app:layout_constraintVertical_bias="0.03"/>

            <TextView
                android:id="@+id/tvNumPersEstim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvNumPersEstim"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/spnStatusOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.035"/>

            <EditText
                android:id="@+id/etNumPersEstim"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:background="@drawable/style_bordes_edittex3"
                android:inputType="number"
                android:gravity="center"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/spnStatusOT"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.04"/>

            <TextView
                android:id="@+id/tvNumHrsEstim"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvNumHrsEstim"
                android:textStyle="bold"
                android:textSize="15sp"
                android:layout_marginStart="15dp"
                android:textAlignment="textEnd"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/tvNumPersEstim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.035"/>

            <EditText
                android:id="@+id/etNumHrsEstim"
                android:layout_width="45dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:background="@drawable/style_bordes_edittex3"
                android:inputType="numberDecimal"
                android:gravity="center"
                android:layout_marginStart="10dp"
                app:layout_constraintStart_toEndOf="@+id/guideline2"
                app:layout_constraintTop_toBottomOf="@+id/etNumPersEstim"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.03"/>

            <View
                android:id="@+id/divider5"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etNumHrsEstim"
                app:layout_constraintVertical_bias="0.05"/>

            <TextView
                android:id="@+id/tvMedidasSegur"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/tvIndicPrev"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:textSize="15sp"
                android:textColor="@color/black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider5"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.05"/>

            <EditText
                android:id="@+id/etMedidadSegur"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:gravity="top"
                android:hint="@string/etIndicPrevHint"
                android:inputType="textMultiLine"
                android:textSize="15sp"
                android:enabled="false"
                android:textColor="@color/black"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/style_bordes_edittex1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvMedidasSegur"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.02"/>

            <TextView
                android:id="@+id/tvRersReviso1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/revisadaPor"
                android:textStyle="bold"
                android:layout_marginStart="16dp"
                android:textAlignment="textEnd"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginTop="15dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/etMedidadSegur" />

            <TextView
                android:id="@+id/tvPersReviso2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="15dp"
                android:text="@string/lrFile01"
                android:textColor="@color/black"
                android:textSize="15sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/etMedidadSegur" />

            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@string/lrFile01"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/guideline1"
                app:layout_constraintTop_toBottomOf="@+id/tvPersReviso2" />

            <View
                android:id="@+id/divider4"
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:background="#9E9CA2"
                android:layout_marginTop="10dp"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvDateTime"/>

            <TextView
                android:id="@+id/tvIdRepteEjec"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:visibility="invisible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/divider4"/>

            <ProgressBar
                android:id="@+id/progresBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:indeterminate="true"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</FrameLayout>